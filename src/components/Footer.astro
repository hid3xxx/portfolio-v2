---
import { Contact } from './Contact';
import { config } from './config';
import Nav from './Nav.astro';
---

<footer class="flex w-full flex-col py-6 text-center sm:flex-row sm:items-baseline sm:justify-between sm:text-left">
  <div class="my-2 sm:mb-0">
    <a href={config.icon.href} class="text-2xl font-bold capitalize no-underline">
      {config.icon.name}
    </a>
    <Contact client:visible />
  </div>
  <Nav />
</footer>
