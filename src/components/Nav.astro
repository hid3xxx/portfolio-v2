---
import { config } from './config';

const style =
  'mx-2 text-base text-txtColor-gray no-underline hover:text-txtColor-light dark:hover:text-txtColor-dark';
---

<ul class="flex flex-row justify-center">
  {
    config.links.map((link) => (
      <li>
        <a href={link.href} class={style}>
          {link.name}
        </a>
      </li>
    ))
  }
</ul>
